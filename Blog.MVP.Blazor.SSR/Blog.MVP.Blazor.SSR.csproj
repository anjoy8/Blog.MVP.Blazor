  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Pages\Post\component\CancelBtn.razor" />
  </ItemGroup>

  <ItemGroup>
    <Watch Remove="Pages\Post\component\Editor.razor" />
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Pages\Post\component\Editor.razor" />
