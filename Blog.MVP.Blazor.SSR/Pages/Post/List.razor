@page "/blog/list"

@using Blog.MVP.Blazor.SSR.Models

@inject HttpClient Http
@inject IJSRuntime JS
@inject BlogService BlogService

<h1>博客</h1>

<p class="text-right">
    <a class="btn btn-primary" href="/blog/add">Add</a>
</p>

<table class="table">
    <tr>
        <th>Id</th>
        <th>标题</th>
        <th>外链</th>
        <th>阅读</th>
        <th></th>
    </tr>
    @if (_blogs != null)
    {
        foreach (var item in _blogs.response)
        {
            <tr>
                <td>@item.bID</td>
                <td>@item.btitle</td>
                <td>@item.bsubmitter</td>
                <td>@item.btraffic</td>
                <td>
                    <a class="btn btn-primary" href="/blog/modify/@item.bID">修改</a>
                </td>
            </tr>
        }
    }

</table>

@code {
    private MessageModel<List<BlogArticle>> _blogs;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            this._blogs = await BlogService.GetBlogs("MVP_azure_2020|MVP_aspnetcore-abp-blazor_2020|MVP_ids4_2020");

            StateHasChanged();
        }
    }
}